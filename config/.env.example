# Firebase Configuration
# Get these from your Firebase project settings > General > Your apps > SDK setup and configuration
PUBLIC_FIREBASE_API_KEY=your-api-key
PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
PUBLIC_FIREBASE_PROJECT_ID=your-project-id
PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
PUBLIC_FIREBASE_APP_ID=your-app-id
PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Google OAuth Client ID
# Get this from Google Cloud Console > Credentials > OAuth 2.0 Client IDs
PUBLIC_GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com

# AI Provider API Keys (server-side only - never exposed to client)
# These are used for deep feedback analysis

# Claude API Key
# Get this from https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI API Key (optional)
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# ============================================================================
# Feature Visibility (Environment-based)
# ============================================================================
# These control which modules are visible in production vs development
# In production, only released features should be enabled
# In development, all features can be enabled for testing

# Environment identifier
PUBLIC_ENVIRONMENT=development

# Module visibility flags (true/false)
PUBLIC_ENABLE_CREATE_MODULE=true
PUBLIC_ENABLE_DISCOVER_MODULE=true
PUBLIC_ENABLE_FEEDBACK_MODULE=true
PUBLIC_ENABLE_LEARN_MODULE=true
PUBLIC_ENABLE_LIBRARY_MODULE=true
PUBLIC_ENABLE_COMPOSE_MODULE=true
PUBLIC_ENABLE_TRAIN_MODULE=true
PUBLIC_ENABLE_ML_TRAINING_MODULE=true
PUBLIC_ENABLE_ADMIN_MODULE=true

# Development tools (should be false in production)
PUBLIC_ENABLE_DEBUG_TOOLS=true
PUBLIC_ENABLE_ROLE_OVERRIDE=true

# Analytics
PUBLIC_ENABLE_ANALYTICS=true

# ============================================================================
# Stripe Configuration (Premium Subscriptions)
# ============================================================================
# Get keys from: https://dashboard.stripe.com/apikeys

# Publishable key (safe for client-side)
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Secret key (server-side only - NEVER expose to client)
STRIPE_SECRET_KEY=sk_test_xxx

# Webhook signing secret (from Stripe webhook settings)
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Premium Subscription Price ID ($10/mo)
# Create in Stripe Dashboard > Products > Create Product > Add Price
# Monthly recurring subscription
PUBLIC_STRIPE_PRICE_ID=price_xxx
