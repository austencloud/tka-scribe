{
  "python.defaultInterpreterPath": "python",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["./src/desktop/modern/tests", "./tests"],
  "python.terminal.activateEnvironment": true,

  // Let pyproject.toml handle ALL Python analysis configuration
  "python.analysis.autoImportCompletions": true,

  // Do NOT set any of these when using pyproject.toml:
  // "python.analysis.extraPaths" - will conflict
  // "python.analysis.typeCheckingMode" - will conflict
  // "python.analysis.include" - will conflict
  // "python.analysis.exclude" - will conflict

  "files.exclude": {
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/.pytest_cache": true,
    "**/dist": true,
    "**/build": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/venv": true,
    "**/.pytest_cache": true
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "files.associations": {
    "test_*.py": "python",
    "conftest.py": "python"
  },

  // Python linting configuration
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.mypyEnabled": false,
  "python.linting.flake8Enabled": false,

  // Formatting
  "python.formatting.provider": "black"
}
