{
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // === TERMINAL SHELL INTEGRATION ===
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "both",
  "terminal.integrated.shellIntegration.showCommandGuide": true,
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.suggest.enabled": true,
  "python.terminal.activateEnvironment": true,
  "python.defaultInterpreterPath": "python",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.debugging.noDebugAdapterPath": false,
  "python.experiments.enabled": false,
  "python.envFile": "${workspaceFolder}/.env",
  "python.analysis.extraPaths": ["${workspaceFolder}/src"],
  "debug.terminal.clearBeforeReusing": true,
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.largeFileOptimizations": true,

  // === PYTHON FORMATTING CONFIGURATION ===
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // === RUFF EXTENSION SETTINGS ===
  "ruff.enable": true,
  "ruff.organizeImports": false, // TEMPORARILY DISABLED TO PREVENT AUTO-IMPORT REMOVAL
  "ruff.fixAll": true,

  // === DISABLE OLD TOOLS TO AVOID CONFLICTS ===
  "python.linting.enabled": false,
  "python.linting.pylintEnabled": false,
  "python.formatting.provider": "none",
  "python.formatting.blackEnabled": false,
  "isort.check": false,

  // === PYTHON LANGUAGE SERVER - ULTRA AGGRESSIVE MEMORY OPTIMIZATION ===
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "off", // DISABLED FOR MEMORY
  "python.analysis.autoSearchPaths": false, // DISABLED FOR MEMORY
  "python.analysis.memory.keepLibraryAst": false,
  "python.analysis.autoImportCompletions": false, // DISABLED FOR MEMORY
  "python.analysis.indexing": false, // DISABLED FOR MEMORY - MAJOR MEMORY SAVER
  "python.analysis.diagnosticMode": "openFilesOnly", // ONLY CURRENT FILE
  "python.analysis.stubPath": "", // DISABLE STUB LOADING
  "python.analysis.typeshedPaths": [], // DISABLE TYPESHED
  "python.analysis.exclude": [
    "**/node_modules/**",
    "**/.venv/**",
    "**/venv/**",
    "**/env/**",
    "**/__pycache__/**",
    "**/build/**",
    "**/dist/**",
    "**/images/**",
    "**/exports/**",
    "**/data/**"
  ],

  // === EDITOR FEATURES - ALL ENABLED FOR PROPER CODING ===
  "editor.semanticHighlighting.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": true,
  "editor.codeLens": true,
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  // === INTELLISENSE - ALL ESSENTIAL FEATURES ENABLED ===
  "editor.suggest.showMethods": true,
  "editor.suggest.showFunctions": true,
  "editor.suggest.showConstructors": true,
  "editor.suggest.showFields": true,
  "editor.suggest.showVariables": true,
  "editor.suggest.showClasses": true,
  "editor.suggest.showStructs": true,
  "editor.suggest.showInterfaces": true,
  "editor.suggest.showModules": true,
  "editor.suggest.showProperties": true,
  "editor.suggest.showEvents": true,
  "editor.suggest.showOperators": true,
  "editor.suggest.showValues": true,
  "editor.suggest.showConstants": true,
  "editor.suggest.showEnums": true,
  "editor.suggest.showEnumMembers": true,
  "editor.suggest.showKeywords": true,
  "editor.suggest.showSnippets": true,
  "editor.suggest.showReferences": true,
  "editor.suggest.showTypeParameters": true,

  // === WEB/JS FORMATTERS ===
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // === ULTRA AGGRESSIVE MEMORY-SAVING FILE EXCLUSIONS ===
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/image_cache/**": true,
    "**/exports/**": true,
    "**/.benchmarks/**": true,
    "**/function_removal_backups/**": true,
    "**/test_reports/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/env/**": true,
    "**/*.log": true,
    "**/*.tmp": true,
    "**/*.backup": true,
    "**/.hypothesis/**": true,
    // AGGRESSIVE ADDITIONS FOR MEMORY
    "**/src/desktop/legacy/**": true, // EXCLUDE LEGACY CODE
    "**/src/desktop/modern/data/**": true, // EXCLUDE DATA FILES
    "**/src/desktop/modern/assets/**": true, // EXCLUDE ASSETS
    "**/src/desktop/modern/exports/**": true, // EXCLUDE EXPORTS
    "**/src/web/*/dist/**": true, // EXCLUDE BUILD OUTPUT
    "**/src/web/*/build/**": true, // EXCLUDE BUILD OUTPUT
    "**/src/web/*/.svelte-kit/**": true, // EXCLUDE SVELTE BUILD
    "**/playwright-report/**": true, // EXCLUDE TEST REPORTS
    "**/test-results/**": true, // EXCLUDE TEST RESULTS
    "**/coverage/**": true, // EXCLUDE COVERAGE
    "**/*.png": true, // EXCLUDE IMAGES
    "**/*.jpg": true, // EXCLUDE IMAGES
    "**/*.jpeg": true, // EXCLUDE IMAGES
    "**/*.gif": true, // EXCLUDE IMAGES
    "**/*.svg": true, // EXCLUDE IMAGES
    "**/*.ico": true, // EXCLUDE IMAGES
    "**/*.webp": true // EXCLUDE IMAGES
  },

  // === FILE WATCHER EXCLUSIONS ===
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.venv/**": true,
    "**/env/**": true,
    "**/venv/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/images/**": true,
    "**/image_cache/**": true,
    "**/exports/**": true,
    "**/.benchmarks/**": true,
    "**/test_reports/**": true,
    "**/function_removal_backups/**": true,
    "**/.hypothesis/**": true,
    "**/*.backup": true,
    "**/*.log": true,
    "**/*.tmp": true
  },

  // === SEARCH EXCLUSIONS ===
  "search.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/env/**": true,
    "**/.git/**": true,
    "**/images/**": true,
    "**/image_cache/**": true,
    "**/exports/**": true,
    "**/.benchmarks/**": true,
    "**/function_removal_backups/**": true,
    "**/test_reports/**": true,
    "**/.hypothesis/**": true,
    "**/*.backup": true,
    "**/*.log": true,
    "**/*.json.backup": true
  },

  // === HIGH MEMORY SYSTEM CONFIGURATION ===
  "files.maxMemoryForLargeFilesMB": 65536,
  "typescript.tsserver.maxTsServerMemory": 16384,
  "python.analysis.memory.keepLibraryLocalVariables": false,

  // === GIT PERFORMANCE ===
  "git.autoRepositoryDetection": true,
  "git.autofetch": false,
  "git.enableStatusBarSync": false,
  "git.decorations.enabled": true,
  "git.autorefresh": true,
  "git.refreshOnWindowFocus": true,
  "git.scanRepositories": [],
  "git.detectSubmodules": false,
  "git.ignoredRepositories": [],

  // === TESTING CONFIGURATION ===
  "python.testing.pytestArgs": [".", "-v", "--tb=short"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.cwd": "${workspaceFolder}",
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "python.testing.pytestPath": "./.venv/Scripts/pytest.exe",

  // === TYPESCRIPT PERFORMANCE - ULTRA AGGRESSIVE ===
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false, // DISABLED FOR MEMORY
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.tsserver.useSeparateSyntaxServer": false, // SAVE MEMORY
  "typescript.tsserver.enableTracing": false,
  "typescript.workspaceSymbols.scope": "currentProject", // LIMIT SCOPE
  "typescript.preferences.includeCompletionsForModuleExports": false,
  "typescript.preferences.includeCompletionsWithSnippetText": false,

  // === MINIMAL BACKGROUND OPTIMIZATIONS ===
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "telemetry.telemetryLevel": "off",

  // === SPELL CHECK ===
  "cSpell.enabled": false,
  "cSpell.ignorePaths": [
    "**/node_modules/**",
    "**/.git/**",
    "**/.venv/**",
    "**/__pycache__/**",
    "**/dist/**",
    "**/build/**",
    "**/*.png",
    "**/*.jpg",
    "**/*.dll",
    "**/*.pyd",
    "**/*.pyc"
  ]
}
