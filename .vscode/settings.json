{
  "python.defaultInterpreterPath": "python",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["./src/desktop/modern/tests", "./tests"],
  "python.terminal.activateEnvironment": true,

  // Let pyproject.toml handle ALL Python analysis configuration
  "python.analysis.autoImportCompletions": true,

  // File management
  "files.exclude": {
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/.pytest_cache": true,
    "**/dist": true,
    "**/build": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/venv": true,
    "**/.pytest_cache": true
  },

  // Formatting - less aggressive
  "editor.formatOnSave": false, // DISABLE auto-format to avoid whitespace issues
  "editor.trimAutoWhitespace": false, // DISABLE trim whitespace
  "files.trimTrailingWhitespace": false, // DISABLE trim whitespace

  "editor.codeActionsOnSave": {
    "source.organizeImports": "never" // DISABLE auto-organize imports
  },

  "files.associations": {
    "test_*.py": "python",
    "conftest.py": "python"
  },

  // Python linting configuration
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.mypyEnabled": false,
  "python.linting.flake8Enabled": false,

  // Disable formatting to prevent conflicts
  "python.formatting.provider": "none"
}
