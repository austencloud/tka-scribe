{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ TKA Launcher (Multi-Process Debug)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true,
      "python": "${command:python.interpreterPath}",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src:${workspaceFolder}/launcher:${workspaceFolder}/src/desktop/modern/src:${workspaceFolder}/src/desktop/legacy/src",
        "PYTHONUNBUFFERED": "1"
      },
      "stopOnEntry": false,
      "showReturnValue": true,
      "presentation": {
        "group": "üéØ Primary Debug",
        "order": 1
      }
    },
    {
      "name": "Simple Debug Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/test_print.py",
      "console": "integratedTerminal",
      "python": "${command:python.interpreterPath}"
    },
    {
      "name": "‚ú® TKA Desktop Modern (Direct Debug)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/desktop/modern/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "redirectOutput": true,
      "cwd": "${workspaceFolder}/src/desktop/modern",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src:${workspaceFolder}/src/desktop/modern:${workspaceFolder}/src/desktop/modern/src",
        "PYTHONUNBUFFERED": "1"
      },
      "stopOnEntry": false,
      "showReturnValue": true,
      "presentation": {
        "group": "üéØ Primary Debug",
        "order": 2
      }
    },
    {
      "name": "üèõÔ∏è TKA Desktop Legacy (Direct Debug)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/desktop/legacy/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}/src/desktop/legacy",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src:${workspaceFolder}/src/desktop/legacy"
      },
      "stopOnEntry": false,
      "showReturnValue": true,
      "presentation": {
        "group": "üéØ Primary Debug",
        "order": 3
      }
    },
    {
      "name": "üß™ Debug All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["src/desktop/modern/tests/", "-v", "--tb=short"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src",
        "QT_API": "pyqt6"
      },
      "stopOnEntry": false,
      "showReturnValue": true,
      "presentation": {
        "group": "üß™ Test Debug",
        "order": 1
      }
    },
    {
      "name": "üß™ Debug Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v", "--tb=short"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src",
        "QT_API": "pyqt6",
        "TKA_DEBUG_MODE": "true"
      },
      "stopOnEntry": false,
      "showReturnValue": true,
      "presentation": {
        "group": "üß™ Test Debug",
        "order": 2
      }
    },
    {
      "name": "üß™ Debug Failed Tests Only",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["src/desktop/modern/tests/", "--lf", "-v", "--tb=short"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src",
        "QT_API": "pyqt6",
        "TKA_DEBUG_MODE": "true"
      },
      "stopOnEntry": false,
      "showReturnValue": true,
      "presentation": {
        "group": "üß™ Test Debug",
        "order": 3
      }
    },
    {
      "name": "üß™ Debug Specific Test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "src/desktop/modern/tests/unit/application/services/core/test_service_registration_manager.py",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src",
        "QT_API": "pyqt6",
        "TKA_DEBUG_MODE": "true"
      },
      "stopOnEntry": false,
      "showReturnValue": true,
      "presentation": {
        "group": "üß™ Test Debug",
        "order": 4
      }
    },
    {
      "name": "üîß Debug Current Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${fileDirname}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
      },
      "stopOnEntry": false,
      "showReturnValue": true,
      "presentation": {
        "group": "üîß Utilities",
        "order": 1
      }
    },
    {
      "name": "üîó Attach to TKA Subprocess (Port 58105)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 58105
      },
      "justMyCode": false,
      "presentation": {
        "group": "üîß Utilities",
        "order": 2
      }
    }
  ]
}
