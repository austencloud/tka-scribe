{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    // ============================================================================
    // STRICT TYPE CHECKING (2025 Best Practice: Maximum Practical Strictness)
    // ============================================================================
    "strict": true, // ✅ ENABLED: Full strict type checking including strictNullChecks
    "noUncheckedIndexedAccess": true, // 2025: Prevent undefined access errors
    "noImplicitOverride": true, // 2025: Explicit override declarations
    "exactOptionalPropertyTypes": false, // Disabled for pragmatism (keep as-is)

    // ============================================================================
    // ADDITIONAL STRICT OPTIONS (Recommended to enable)
    // ============================================================================
    "noImplicitReturns": true, // ⭐ NEW: Require explicit returns in all code paths
    "noUnusedLocals": true, // ⭐ NEW: Remove unused local variables
    "noUnusedParameters": true, // ⭐ NEW: Flag unused function parameters (prefix with _ if intentional)

    // ============================================================================
    // MODULE RESOLUTION (Optimized for bundler workflow)
    // ============================================================================
    "moduleResolution": "Bundler", // 2025: Bundler mode for Vite/SvelteKit
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true, // Performance: direct .ts/.tsx imports

    // ============================================================================
    // INTEROP & COMPATIBILITY
    // ============================================================================
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true, // 2025: Required for Vite HMR
    "verbatimModuleSyntax": false, // 2025: Better for SvelteKit

    // ============================================================================
    // EMIT CONFIGURATION (No emit for bundler-based projects)
    // ============================================================================
    "noEmit": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,

    // ============================================================================
    // PERFORMANCE OPTIMIZATIONS
    // ============================================================================
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "skipLibCheck": true, // Faster builds, skip type checking in node_modules

    // ============================================================================
    // JAVASCRIPT SUPPORT
    // ============================================================================
    "allowJs": true,
    "checkJs": false,

    // ============================================================================
    // DECORATOR SUPPORT (For InversifyJS)
    // ============================================================================
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false, // Disabled to avoid 189 import type errors

    // ============================================================================
    // TYPE DEFINITIONS
    // ============================================================================
    "types": ["reflect-metadata", "vite/client"],

    // ============================================================================
    // ADDITIONAL SAFETY (2025 Best Practices)
    // ============================================================================
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false, // Prevent dead code
    "allowUnusedLabels": false, // No unused labels
    "noPropertyAccessFromIndexSignature": false // Keep disabled - more lenient for dynamic access
  },
  "include": [
    "global.d.ts",
    "src/**/*.ts",
    "src/**/*.svelte"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "./build",
    "./build/**",
    ".svelte-kit",
    ".vercel_build_output",
    ".vercel",
    "archive",
    "legacy_web_app",
    "**/*.js"
  ]
}
