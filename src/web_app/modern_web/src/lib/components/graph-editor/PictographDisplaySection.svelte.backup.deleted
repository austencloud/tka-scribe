<script lang="ts">
	import { onMount } from 'svelte';
	import PictographRenderer from '$components/pictograph/PictographRenderer.svelte';
	import DetailedInfoPanel from './DetailedInfoPanel.svelte';
	import type { BeatData, SequenceData } from '$services/interfaces';

	// Props
	const {
		currentSequence,
		selectedBeatIndex,
		selectedBeatData,
		onPictographUpdated
	} = $props<{
		currentSequence: SequenceData | null;
		selectedBeatIndex: number | null;
		selectedBeatData: BeatData | null;
		onPictographUpdated: (beatIndex: number, beatData: BeatData) => void;
	}>();

	// Component state
	let pictographRenderer: PictographRenderer;
	let detailedInfoPanel: DetailedInfoPanel;

	// Update display when beat data changes
	export function updateDisplay(beatIndex: number, beatData: BeatData | null) {
		try {
			if (pictographRenderer && beatData) {
				pictographRenderer.updatePictograph(beatData.pictograph_data);
			}
			
			if (detailedInfoPanel) {
				detailedInfoPanel.updateInfo(beatIndex, beatData);
			}
			
			console.log(`PictographDisplaySection: Updated display for beat ${beatIndex}`);
		} catch (error) {
			console.error('Error updating pictograph display:', error);
		}
	}

	// Update only pictograph (for real-time changes)
	export function updatePictographOnly(beatIndex: number, beatData: BeatData) {
		try {
			if (pictographRenderer && beatData.pictograph_data) {
				pictographRenderer.updatePictograph(beatData.pictograph_data);
			}
			console.log(`PictographDisplaySection: Updated pictograph only for beat ${beatIndex}`);
		} catch (error) {
			console.error('Error updating pictograph only:', error);
		}
	}

	// Handle pictograph interactions
	function handlePictographClicked(event: CustomEvent) {
		try {
			const { position, element } = event.detail;
			console.log('Pictograph clicked:', position, element);
			// Additional click handling can be added here
		} catch (error) {
			console.error('Error handling pictograph click:', error);
		}
	}

	// Reactive updates
	$effect(() => {
		if (selectedBeatIndex !== null && selectedBeatData) {
			updateDisplay(selectedBeatIndex, selectedBeatData);
		}
	});

	onMount(() => {
		console.log('PictographDisplaySection mounted');
	});
</script>

<div class="pictograph-display-section" data-testid="pictograph-display-section">
	<!-- Left side: Large pictograph display -->
	<div class="pictograph-container">
		<div class="pictograph-header">
			<h3>Pictograph</h3>
			{#if selectedBeatIndex !== null}
				<span class="beat-indicator">Beat {selectedBeatIndex + 1}</span>
			{/if}
		</div>
		<div class="pictograph-content">
			{#if selectedBeatData?.pictograph_data}
				<PictographRenderer
					bind:this={pictographRenderer}
					pictographData={selectedBeatData.pictograph_data}
					size="large"
					interactive={true}
					on:click={handlePictographClicked}
				/>
			{:else}
				<div class="no-pictograph">
					<div class="placeholder-icon">ðŸŽ­</div>
					<p>Select a beat to view its pictograph</p>
				</div>
			{/if}
		</div>
	</div>

	<!-- Right side: Detailed info panel -->
	<div class="info-container">
		<DetailedInfoPanel
			bind:this={detailedInfoPanel}
			{selectedBeatIndex}
			{selectedBeatData}
			{currentSequence}
		/>
	</div>
</div>

