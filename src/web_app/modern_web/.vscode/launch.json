{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Dev Server + Open Browser",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm run dev",
			// Wait for Vite dev server; when ready open default browser once.
			"serverReadyAction": {
				"pattern": "Local:.*(http://localhost:5174/)",
				"uriFormat": "%s",
				"action": "openExternally"
			}
		}
	]
}
