{
  // === Python Configuration ===
  "python.defaultInterpreterPath": ".venv/Scripts/python.exe",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.indexing": true,
  "python.analysis.packageIndexDepths": [
    {
      "name": "desktop",
      "depth": 10
    },
    {
      "name": "shared",
      "depth": 10
    },
    {
      "name": "legacy",
      "depth": 10
    }
  ],
  "python.analysis.extraPaths": [
    "./modern/src",
    "./legacy",
    "../..",
    "../../src",
    "../../src/desktop/modern/src",
    "../../src/desktop/legacy",
    "../../src/shared",
    "../../launcher",
    "../../packages"
  ],
  "python.analysis.include": [
    "./modern/**",
    "./legacy/**",
    "./data/**",
    "./images/**",
    "../../src/shared/**",
    "../../src/desktop/**",
    "../../launcher/**",
    "../../packages/**"
  ],
  "python.analysis.exclude": [
    "**/__pycache__/**",
    "**/.pytest_cache/**",
    "**/node_modules/**",
    "**/*.pyc"
  ],
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.completeFunctionParens": true,
  "python.analysis.importFormat": "absolute",
  "python.analysis.fixAll": ["source.unusedImports"],
  "python.analysis.stubPath": "./typings",
  "python.analysis.userFileIndexingLimit": 5000,
  
  // === Pylance/Pyright Diagnostic Suppressions ===
  "python.analysis.diagnosticSeverityOverrides": {
    // Import and module issues
    "reportMissingImports": "none",
    "reportMissingModuleSource": "none", 
    "reportUnusedImport": "information",
    "reportUnusedClass": "information",
    "reportUnusedFunction": "information",
    "reportUnusedVariable": "information",
    "reportUnusedCoroutine": "information",
    "reportUnusedExpression": "none",
    
    // Type checking issues
    "reportGeneralTypeIssues": "information",
    "reportOptionalSubscript": "none",
    "reportOptionalMemberAccess": "none",
    "reportOptionalCall": "none",
    "reportOptionalIterable": "none",
    "reportOptionalContextManager": "none",
    "reportOptionalOperand": "none",
    "reportTypedDictNotRequiredAccess": "none",
    "reportPrivateImportUsage": "none",
    "reportUnknownParameterType": "none",
    "reportUnknownArgumentType": "none",
    "reportUnknownLambdaType": "none",
    "reportUnknownVariableType": "none",
    "reportUnknownMemberType": "none",
    "reportMissingParameterType": "none",
    "reportMissingTypeArgument": "none",
    "reportInvalidTypeVarUse": "none",
    "reportCallInDefaultInitializer": "none",
    "reportUnnecessaryIsInstance": "information",
    "reportUnnecessaryCast": "information",
    "reportUnnecessaryComparison": "information",
    "reportUnnecessaryContains": "information",
    "reportAssertAlwaysTrue": "information",
    "reportSelfClsParameterName": "none",
    "reportImplicitStringConcatenation": "none",
    
    // Function and method issues
    "reportFunctionMemberAccess": "none",
    "reportIncompatibleMethodOverride": "information",
    "reportIncompatibleVariableOverride": "information",
    "reportOverlappingOverload": "information",
    "reportPossiblyUnboundVariable": "information",
    "reportConstantRedefinition": "none",
    "reportInvalidStubStatement": "none",
    "reportIncompleteStub": "none",
    "reportUnsupportedDunderAll": "none",
    "reportUnusedCallResult": "none",
    
    // PyQt/Qt specific suppressions
    "reportAttributeAccessIssue": "none",
    "reportArgumentType": "information",
    "reportReturnType": "information",
    "reportAssignmentType": "information",
    "reportOperatorIssue": "information",
    "reportIndexIssue": "information",
    "reportInvalidStringEscapeSequence": "information",
    
    // Code style (handled by ruff)
    "reportWildcardImportFromLibrary": "none",
    "reportMissingTypeStubs": "none",
    "reportImportCycles": "information",
    "reportPropertyTypeMismatch": "information",
    "reportDuplicateImport": "information",
    "reportUninitializedInstanceVariable": "none",
    "reportCallIssue": "information",
    "reportRedeclaration": "information"
  },

  // === Testing Configuration ===
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests",
    "--tb=short",
    "-v"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,

  // === Linting & Formatting ===
  // Using Ruff as the primary linter and formatter (replaces Black + Flake8)
  "ruff.enable": true,
  "ruff.lineLength": 88,
  "ruff.fixAll": true,
  "ruff.organizeImports": true,
  "ruff.codeAction.fixViolation.enable": true,
  "ruff.codeAction.disableRuleComment.enable": true,
  "ruff.lint.enable": true,
  "ruff.lint.select": [
    "E",  // pycodestyle errors (auto-fixable)
    "W",  // pycodestyle warnings (auto-fixable) - includes W293
    "F",  // pyflakes (auto-fixable)
    "I",  // isort (import sorting - auto-fixable)
    "UP", // pyupgrade (auto-fixable)
  ],
  "ruff.lint.ignore": [
    "E501", // Line too long (handled by formatter)
    "N802", // Function name should be lowercase (Qt uses camelCase)
    "N803", // Argument name should be lowercase (Qt uses camelCase)
    "N806", // Variable in function should be lowercase (Qt uses camelCase)
    "N812", // Lowercase imported as non-lowercase (PyQt6 modules)
    "N815", // mixedCase variable in class scope (Qt widgets)
    "N816"  // mixedCase variable in global scope
  ],
  
  // Disable old linting/formatting tools in favor of Ruff
  "python.linting.enabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  "python.formatting.provider": "none",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },

  // === Editor Configuration ===
  "editor.rulers": [88, 120],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.trimAutoWhitespace": true,
  "editor.renderWhitespace": "boundary",
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 88,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 88,

  // === File Associations ===
  "files.associations": {
    "*.py": "python",
    "*.pyx": "python",
    "*.pyi": "python",
    "*.json": "jsonc",
    "*.ini": "ini",
    "settings.json": "jsonc",
    "launch.json": "jsonc",
    "tasks.json": "jsonc"
  },

  // === File Exclusions ===
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.egg-info": true,
    "**/build": true,
    "**/dist": true,
    "**/hypothesis": true,
    "**/.hypothesis": true
  },

  // === Search Configuration ===
  "search.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/*.egg-info": true,
    "**/build": true,
    "**/dist": true,
    "**/.venv": true,
    "**/venv": true,
    "**/hypothesis": true,
    "**/.hypothesis": true
  },

  // === IntelliSense & Autocomplete ===
  "editor.suggest.insertMode": "replace",
  "editor.suggest.showStatusBar": true,
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.parameterHints.enabled": true,
  "editor.parameterHints.cycle": true,
  
  // === Code Navigation ===
  "editor.gotoLocation.multipleReferences": "peek",
  "editor.gotoLocation.multipleDefinitions": "peek",
  "editor.gotoLocation.multipleDeclarations": "peek",
  "editor.gotoLocation.multipleImplementations": "peek",
  "editor.gotoLocation.multipleTypeDefinitions": "peek",
  
  // === Python Specific Navigation ===
  "python.analysis.addImport.includePackageInit": true,
  "python.analysis.addImport.searchPaths": [
    "./modern/src",
    "./legacy",
    "../..",
    "../../src",
    "../../src/shared",
    "../../src/desktop"
  ],

  // === Git Configuration ===
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // === Terminal Configuration ===
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },

  // === Workspace Specific ===
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vs-seti",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // === PyQt/Qt Specific ===
  "qt.searchPaths": [
    "./modern/src",
    "./legacy"
  ],

  // === Debug Configuration ===
  "debug.console.fontSize": 14,
  "debug.console.lineHeight": 22,
  "debug.inlineValues": "auto",
  "debug.showBreakpointsInOverviewRuler": true,

  // === Performance ===
  "files.watcherExclude": {
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/build/**": true,
    "**/dist/**": true,
    "**/.venv/**": true,
    "**/hypothesis/**": true,
    "**/.hypothesis/**": true
  }
}
