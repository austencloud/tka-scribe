{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tka.dev/schemas/sequence-data-v2.json",
  "title": "SequenceData v2",
  "description": "Complete kinetic sequence data based on modern desktop domain model",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this sequence"
    },
    "name": {
      "type": "string",
      "default": "",
      "description": "Human-readable name for the sequence"
    },
    "word": {
      "type": "string",
      "default": "",
      "description": "Generated word from sequence letters"
    },
    "beats": {
      "type": "array",
      "items": {
        "$ref": "beat-data-v2.json"
      },
      "default": [],
      "description": "Array of beats in sequence order"
    },
    "start_position": {
      "anyOf": [
        {"$ref": "core-enums.json#/definitions/GridPosition"},
        {"type": "null"}
      ],
      "description": "Starting position for the sequence"
    },
    "metadata": {
      "type": "object",
      "description": "Additional sequence metadata",
      "additionalProperties": true,
      "properties": {
        "author": {
          "type": "string",
          "description": "Sequence author"
        },
        "description": {
          "type": "string", 
          "description": "Sequence description"
        },
        "difficulty": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "Difficulty rating"
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Categorization tags"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "modified_at": {
          "type": "string",
          "format": "date-time", 
          "description": "Last modification timestamp"
        },
        "version": {
          "type": "string",
          "description": "Schema version used"
        }
      }
    }
  },
  "required": [
    "id",
    "name",
    "word",
    "beats"
  ],
  "additionalProperties": false
}