{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tka.dev/schemas/glyph-data.json",
  "title": "GlyphData",
  "description": "Data for pictograph glyphs (elemental, VTG, TKA, position)",
  "type": "object",
  "properties": {
    "vtg_mode": {
      "anyOf": [
        {"$ref": "core-enums.json#/definitions/VTGMode"},
        {"type": "null"}
      ],
      "description": "VTG mode classification"
    },
    "elemental_type": {
      "anyOf": [
        {"$ref": "core-enums.json#/definitions/ElementalType"},
        {"type": "null"}
      ],
      "description": "Elemental type classification"
    },
    "letter_type": {
      "anyOf": [
        {"$ref": "core-enums.json#/definitions/LetterType"},
        {"type": "null"}
      ],
      "description": "TKA letter type classification"
    },
    "has_dash": {
      "type": "boolean",
      "default": false,
      "description": "Whether the letter has a dash variant"
    },
    "turns_data": {
      "anyOf": [
        {"type": "string"},
        {"type": "null"}
      ],
      "description": "Turns tuple string representation"
    },
    "start_position": {
      "anyOf": [
        {"type": "string"},
        {"type": "null"}
      ],
      "description": "Start position identifier"
    },
    "end_position": {
      "anyOf": [
        {"type": "string"},
        {"type": "null"}
      ],
      "description": "End position identifier"
    },
    "show_elemental": {
      "type": "boolean",
      "default": true,
      "description": "Whether to show elemental glyph"
    },
    "show_vtg": {
      "type": "boolean",
      "default": true,
      "description": "Whether to show VTG glyph"
    },
    "show_tka": {
      "type": "boolean",
      "default": true,
      "description": "Whether to show TKA glyph"
    },
    "show_positions": {
      "type": "boolean",
      "default": true,
      "description": "Whether to show position glyphs"
    }
  },
  "additionalProperties": false
}
