{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tka.dev/schemas/motion-data-v2.json",
  "title": "MotionData v2",
  "description": "Immutable motion data based on modern desktop domain model",
  "type": "object",
  "properties": {
    "motion_type": {
      "$ref": "core-enums.json#/definitions/MotionType"
    },
    "prop_rot_dir": {
      "$ref": "core-enums.json#/definitions/RotationDirection"
    },
    "start_loc": {
      "$ref": "core-enums.json#/definitions/Location"
    },
    "end_loc": {
      "$ref": "core-enums.json#/definitions/Location"
    },
    "turns": {
      "type": "number",
      "minimum": 0,
      "description": "Number of turns in the motion"
    },
    "start_ori": {
      "$ref": "core-enums.json#/definitions/Orientation",
      "default": "in"
    },
    "end_ori": {
      "$ref": "core-enums.json#/definitions/Orientation", 
      "default": "in"
    }
  },
  "required": [
    "motion_type",
    "prop_rot_dir",
    "start_loc", 
    "end_loc",
    "turns",
    "start_ori",
    "end_ori"
  ],
  "additionalProperties": false
}