[MASTER]
# Add the project root and all necessary directories to Python path
init-hook=import sys; import os; [sys.path.insert(0, os.path.join(os.path.dirname(os.path.abspath(__file__ if '__file__' in globals() else os.getcwd())), path)) for path in ['src/desktop/legacy/src', 'src/desktop/modern/src', 'launcher', 'packages', 'data', 'packages/shared-types/python', 'packages/constants/python'] if os.path.exists(os.path.join(os.path.dirname(os.path.abspath(__file__ if '__file__' in globals() else os.getcwd())), path))]

# PyQt6 support
extension-pkg-allow-list=PyQt6

# Ignore generated files and cache directories
ignore=__pycache__,
       .git,
       node_modules,
       .pytest_cache,
       .vscode,
       build,
       dist

[BASIC]
# Good variable names
good-names=i,j,k,ex,Run,_,x,y,w,h,r,g,b,a,id,ok,ui,db,qt,app,e

[TYPECHECK]
# Tell Pylint about PyQt6 generated members
generated-members=PyQt6.*,
                  PyQt6.QtWidgets.*,
                  PyQt6.QtCore.*,
                  PyQt6.QtGui.*

# Ignore missing members in certain modules
ignored-modules=PyQt6

[MESSAGES CONTROL]
# Disable the problematic import errors and annoying warnings
disable=C0330,  # Wrong hanging indentation
        C0326,  # Bad whitespace
        C0303,  # Trailing whitespace
        C0301,  # Line too long
        C0305,  # Trailing newlines
        C0411,  # Wrong import order
        C0412,  # Ungrouped imports
        C0415,  # Import outside toplevel
        C2401,  # Non-ASCII name (for Greek letters)
        E0213,  # No self argument
        W0107,  # Unnecessary pass statement
        W0611,  # Unused import
        W0201,  # Attribute defined outside __init__
        W0613,  # Unused argument (common in Qt signal handlers)
        W0621,  # Redefined outer name
        W1203,  # logging-fstring-interpolation
        W0718,  # broad-exception-caught
        R0903,  # Too few public methods (common in Qt widgets)
        R0913,  # Too many arguments (common in Qt constructors)
        R0914,  # Too many locals
        R0912,  # Too many branches
        R0915,  # Too many statements
        R0201,  # Method could be a function (common in Qt event handlers)
        C0103,  # Invalid name (Qt uses camelCase method names)
        C0116,  # Missing function or method docstring
        C0115,  # Missing class docstring
        C0114,  # Missing module docstring
        E0401   # Import error - DISABLE THIS TO STOP THE FLOOD OF ERRORS

[FORMAT]
# Line length
max-line-length=120

[DESIGN]
# Object limits
max-args=10
max-locals=20
max-returns=6
max-branches=15
max-statements=60
max-parents=7
max-attributes=15
max-public-methods=25
max-bool-expr=5

[IMPORTS]
# Allow relative imports
allow-wildcard-with-all=no
