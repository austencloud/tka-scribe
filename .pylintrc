[MASTER]
# Add the project root and all necessary directories to Python path
init-hook='import sys; sys.path.extend(["F:/CODE/TKA", "F:/CODE/TKA/launcher", "F:/CODE/TKA/src/desktop/modern/src"])'

# PyQt6 support
extension-pkg-allow-list=PyQt6

# Ignore generated files and cache directories
ignore=__pycache__,
       .git,
       node_modules,
       .pytest_cache,
       .vscode,
       build,
       dist

[BASIC]
# Good variable names
good-names=i,j,k,ex,Run,_,x,y,w,h,r,g,b,a,id,ok,ui,db,qt,app,e

[TYPECHECK]
# Tell Pylint about PyQt6 generated members
generated-members=PyQt6.*,
                  PyQt6.QtWidgets.*,
                  PyQt6.QtCore.*,
                  PyQt6.QtGui.*

# Ignore missing members in certain modules
ignored-modules=PyQt6

[MESSAGES CONTROL]
# Disable all the annoying warnings that used to not show up
disable=C0330,  # Wrong hanging indentation
        C0326,  # Bad whitespace
        C0303,  # Trailing whitespace
        C0301,  # Line too long
        C0415,  # Import outside toplevel
        W0107,  # Unnecessary pass statement
        W0611,  # Unused import
        W0201,  # Attribute defined outside __init__
        R0903,  # Too few public methods (common in Qt widgets)
        R0913,  # Too many arguments (common in Qt constructors)
        C0103,  # Invalid name (Qt uses camelCase method names)
        W0613,  # Unused argument (common in Qt signal handlers)
        R0201,  # Method could be a function (common in Qt event handlers)
        C0116,  # Missing function or method docstring
        C0115,  # Missing class docstring
        C0114,  # Missing module docstring

[FORMAT]
# Line length
max-line-length=100

# String formatting
expected-line-ending-format=LF

[DESIGN]
# Object limits
max-args=10
max-locals=20
max-returns=6
max-branches=15
max-statements=60
max-parents=7
max-attributes=10
max-public-methods=25
max-bool-expr=5

[IMPORTS]
# Allow relative imports
allow-wildcard-with-all=no

[LOGGING]
# Logging format
logging-format-style=new
