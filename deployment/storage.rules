rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // ML Training data - users can only access their own data
    match /ml-training/{userId}/{allPaths=**} {
      // Allow authenticated users to read/write their own training data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
