rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // ML Training data - users can only access their own data
    match /ml-training/{userId}/{allPaths=**} {
      // Allow authenticated users to read/write their own training data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Feedback images - authenticated users can upload and read
    match /feedback/{feedbackId}/{allPaths=**} {
      // Allow authenticated users to upload feedback images
      allow write: if request.auth != null;
      // Allow authenticated users to read feedback images
      allow read: if request.auth != null;
    }

    // User recordings - users can only access their own recordings
    match /users/{userId}/recordings/{allPaths=**} {
      // Allow authenticated users to read/write their own recordings
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User thumbnails - users can write their own, anyone can read (for public library)
    match /users/{userId}/thumbnails/{allPaths=**} {
      // Owner can write their own thumbnails
      allow write: if request.auth != null && request.auth.uid == userId;
      // Anyone can read thumbnails (for public sequence display)
      allow read: if true;
    }

    // User animations - users can write their own, anyone can read (for public library)
    match /users/{userId}/animations/{allPaths=**} {
      // Owner can write their own animations
      allow write: if request.auth != null && request.auth.uid == userId;
      // Anyone can read animations (for public sequence display)
      allow read: if true;
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
