{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tka.dev/schemas/motion-data.json",
  "title": "MotionData",
  "description": "Immutable motion data for props and arrows. Replaces complex motion attribute dictionaries.",
  "type": "object",
  "properties": {
    "motion_type": {
      "type": "string",
      "enum": ["pro", "anti", "float", "dash", "static"],
      "description": "Type of motion being performed"
    },
    "prop_rot_dir": {
      "type": "string", 
      "enum": ["cw", "ccw", "no_rot"],
      "description": "Direction of prop rotation"
    },
    "start_loc": {
      "type": "string",
      "enum": ["n", "e", "s", "w", "ne", "nw", "se", "sw"],
      "description": "Starting location on the grid"
    },
    "end_loc": {
      "type": "string", 
      "enum": ["n", "e", "s", "w", "ne", "nw", "se", "sw"],
      "description": "Ending location on the grid"
    },
    "turns": {
      "type": "number",
      "minimum": 0,
      "description": "Number of turns in the motion"
    },
    "start_ori": {
      "type": "string",
      "enum": ["in", "out", "clock", "counter"],
      "description": "Starting orientation"
    },
    "end_ori": {
      "type": "string",
      "enum": ["in", "out", "clock", "counter"], 
      "description": "Ending orientation"
    }
  },
  "required": [
    "motion_type",
    "prop_rot_dir", 
    "start_loc",
    "end_loc",
    "turns",
    "start_ori",
    "end_ori"
  ],
  "additionalProperties": false
}
